{
  "version": 2,
  "buildCommand": "pnpm build:vercel",
  "installCommand": "pnpm install",
  "framework": null,
  "outputDirectory": "dist/public",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.mjs" },
    { "source": "/((?!assets/).*)", "destination": "/index.html" }
  ]
}
